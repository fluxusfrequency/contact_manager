<p id="notice"><%= notice %></p>

<div class="person">
  <ul class="actions">
    <li><%= link_to "Edit", edit_person_path(@person) %></li>
    <li><%= link_to "Destroy", @person, :confirm => 'Are you sure?', :method => :delete %></li>
    <li><%= link_to "View All", people_path %></li>
  </ul>

<h1> <%= @person.first_name %> <%= @person.last_name %> </h1>

<%= render 'phone_numbers/phone_numbers', :phone_numbers => @person.phone_numbers %>
<%= link_to 'Add phone number', new_phone_number_path(contact_id: @person.id, contact_type: 'Person') %>

<%= render 'email_addresses/email_addresses', :email_addresses => @person.email_addresses %>
<%= link_to 'Add email address', new_email_address_path(contact_id: @person.id, contact_type: 'Person') %>

</div>