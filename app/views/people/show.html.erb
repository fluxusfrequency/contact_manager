<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @person.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @person.last_name %>
</p>

<%= render 'phone_numbers/phone_numbers', :phone_numbers => @person.phone_numbers %>

<ul>
  <% @person.email_addresses.each do |email| %>
    <li><%= email.address %>
      <%= link_to('edit', edit_email_address_path(email)) %>
      <%= link_to('delete', email, method: :delete, data: {confirm: "Are you sure you want to delete this email address?"} ) %></li>
    </li>

  <% end %>
</ul>

<%= link_to 'Add phone number', new_phone_number_path(contact_id: @person.id, contact_type: 'Person') %> |
<%= link_to 'Add email address', new_email_address_path(contact_id: @person.id, contact_type: 'Person') %> |
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
